<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==================== TEXT APPEARANCES ==================== -->

    <style name="TextAppearance.GreenMate.Display" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.GreenMate.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.GreenMate.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.GreenMate.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.GreenMate.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.GreenMate.BodySecondary" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.GreenMate.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.GreenMate.Overline" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">@dimen/text_size_overline</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextAppearance.GreenMate.Score" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">@dimen/score_text_size</item>
        <item name="fontFamily">sans-serif-bold</item>
    </style>

    <!-- ==================== BUTTON STYLES ==================== -->

    <!-- Primary Button (Filled) -->
    <style name="Widget.GreenMate.Button.Primary" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- Secondary Button (Outlined) -->
    <style name="Widget.GreenMate.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Text Button -->
    <style name="Widget.GreenMate.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- Small Button -->
    <style name="Widget.GreenMate.Button.Small" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height_small</item>
        <item name="android:paddingStart">@dimen/spacing_md</item>
        <item name="android:paddingEnd">@dimen/spacing_md</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <!-- ==================== CARD STYLES ==================== -->

    <!-- Standard Card -->
    <style name="Widget.GreenMate.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <!-- Elevated Card -->
    <style name="Widget.GreenMate.Card.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <!-- Outlined Card -->
    <style name="Widget.GreenMate.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <!-- Home Feature Card -->
    <style name="Widget.GreenMate.Card.Feature" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:minHeight">@dimen/home_card_height</item>
    </style>

    <!-- ==================== TEXT INPUT STYLES ==================== -->

    <style name="Widget.GreenMate.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_corner_radius</item>
        <item name="hintTextAppearance">@style/TextAppearance.GreenMate.Caption</item>
    </style>

    <style name="Widget.GreenMate.TextInputLayout.Dropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_corner_radius</item>
    </style>

    <!-- ==================== SWITCH STYLE ==================== -->

    <style name="Widget.GreenMate.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">?attr/colorPrimary</item>
    </style>

    <!-- ==================== TOOLBAR STYLE ==================== -->

    <style name="Widget.GreenMate.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="titleTextAppearance">@style/TextAppearance.GreenMate.Title</item>
    </style>

    <!-- ==================== SCORE BADGE STYLES ==================== -->

    <!-- Base score badge style (must have explicit parent) -->
    <style name="Widget.GreenMate.ScoreBadge" parent="android:Widget.TextView">
        <item name="android:padding">@dimen/spacing_sm</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.GreenMate.ScoreBadge.Green" parent="Widget.GreenMate.ScoreBadge">
        <item name="android:background">@color/score_green_background</item>
        <item name="android:textColor">@color/score_green</item>
    </style>

    <style name="Widget.GreenMate.ScoreBadge.Yellow" parent="Widget.GreenMate.ScoreBadge">
        <item name="android:background">@color/score_yellow_background</item>
        <item name="android:textColor">@color/score_yellow</item>
    </style>

    <style name="Widget.GreenMate.ScoreBadge.Red" parent="Widget.GreenMate.ScoreBadge">
        <item name="android:background">@color/score_red_background</item>
        <item name="android:textColor">@color/score_red</item>
    </style>

</resources>
