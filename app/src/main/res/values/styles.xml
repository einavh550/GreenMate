<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==================== PREMIUM TEXT APPEARANCES ==================== -->

    <!-- Display: Large titles, hero text -->
    <style name="TextAppearance.GreenMate.Display" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
                <item name="android:fontWeight">700</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- Headline: Screen headers (Dashboard, My Plants, Settings) -->
    <style name="TextAppearance.GreenMate.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
                <item name="android:fontWeight">700</item>
        <item name="android:letterSpacing">-0.015</item>
    </style>

    <!-- Title: Section headers (Today's Care, Overdue) -->
    <style name="TextAppearance.GreenMate.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
                <item name="android:fontWeight">600</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Subtitle: Card titles, emphasized text -->
    <style name="TextAppearance.GreenMate.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
                <item name="android:fontWeight">600</item>
    </style>

    <!-- Body: Primary content text -->
    <style name="TextAppearance.GreenMate.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
                <item name="android:fontWeight">400</item>
    </style>

    <!-- Body Secondary: Supporting text, descriptions -->
    <style name="TextAppearance.GreenMate.BodySecondary" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
                <item name="android:fontWeight">400</item>
    </style>

    <!-- Caption: Small labels, metadata -->
    <style name="TextAppearance.GreenMate.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
                <item name="android:fontWeight">500</item>
    </style>

    <!-- Overline: Category labels, tags -->
    <style name="TextAppearance.GreenMate.Overline" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">@dimen/text_size_overline</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
                <item name="android:fontWeight">600</item>
    </style>

    <!-- Score: Large numbers, statistics -->
    <style name="TextAppearance.GreenMate.Score" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">@dimen/score_text_size</item>
                <item name="android:fontWeight">700</item>
    </style>

    <!-- ==================== BUTTON STYLES ==================== -->

    <!-- Primary Button (Filled) -->
    <style name="Widget.GreenMate.Button.Primary" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
                <item name="android:fontWeight">600</item>
    </style>

    <!-- Secondary Button (Outlined) -->
    <style name="Widget.GreenMate.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
                <item name="android:fontWeight">600</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Text Button -->
    <style name="Widget.GreenMate.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_body</item>
                <item name="android:fontWeight">600</item>
    </style>

    <!-- Small Button -->
    <style name="Widget.GreenMate.Button.Small" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height_small</item>
        <item name="android:paddingStart">@dimen/spacing_md</item>
        <item name="android:paddingEnd">@dimen/spacing_md</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_body</item>
                <item name="android:fontWeight">600</item>
    </style>

    <!-- ==================== CARD STYLES ==================== -->

    <!-- Standard Card -->
    <style name="Widget.GreenMate.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <!-- PREMIUM CARD: Sage-tinted surface with subtle stroke -->
    <style name="Widget.GreenMate.Card.Premium" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/premium_card_corner_radius</item>
        <item name="cardElevation">@dimen/premium_card_elevation</item>
        <item name="cardBackgroundColor">@color/card_premium_surface</item>
        <item name="strokeColor">@color/card_premium_stroke</item>
        <item name="strokeWidth">@dimen/premium_card_stroke_width</item>
    </style>

    <!-- Elevated Card -->
    <style name="Widget.GreenMate.Card.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <!-- Outlined Card -->
    <style name="Widget.GreenMate.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <!-- Home Feature Card -->
    <style name="Widget.GreenMate.Card.Feature" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:minHeight">@dimen/home_card_height</item>
    </style>

    <!-- ==================== TEXT INPUT STYLES ==================== -->

    <style name="Widget.GreenMate.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_corner_radius</item>
        <item name="hintTextAppearance">@style/TextAppearance.GreenMate.Caption</item>
    </style>

    <style name="Widget.GreenMate.TextInputLayout.Dropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_corner_radius</item>
    </style>

    <!-- ==================== SWITCH STYLE ==================== -->

    <style name="Widget.GreenMate.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">?attr/colorPrimary</item>
    </style>

    <!-- ==================== TOOLBAR STYLE ==================== -->

    <style name="Widget.GreenMate.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="titleTextAppearance">@style/TextAppearance.GreenMate.Title</item>
    </style>

    <!-- ==================== PREMIUM STAT CARD STYLES ==================== -->

    <!-- Stat Card Container: Premium sage-tinted -->
    <style name="Widget.GreenMate.StatCard" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/stat_card_corner_radius</item>
        <item name="cardElevation">@dimen/premium_card_elevation</item>
        <item name="cardBackgroundColor">@color/card_premium_surface</item>
        <item name="strokeColor">@color/card_premium_stroke</item>
        <item name="strokeWidth">@dimen/premium_card_stroke_width</item>
    </style>

    <!-- Stat Card Number (Large, Bold) -->
    <style name="TextAppearance.GreenMate.StatNumber" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/stat_card_number_size</item>
                <item name="android:fontWeight">700</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- Stat Card Label (Subtle, Small) -->
    <style name="TextAppearance.GreenMate.StatLabel" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">@dimen/stat_card_label_size</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
                <item name="android:fontWeight">500</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- ==================== PREMIUM CARE CARD STYLES ==================== -->

    <!-- Care Task Card: Premium sage-tinted -->
    <style name="Widget.GreenMate.CareCard" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/care_card_corner_radius</item>
        <item name="cardElevation">@dimen/premium_card_elevation</item>
        <item name="cardBackgroundColor">@color/card_premium_surface</item>
        <item name="strokeColor">@color/card_premium_stroke</item>
        <item name="strokeWidth">@dimen/premium_card_stroke_width</item>
    </style>

    <!-- Care Card Plant Name -->
    <style name="TextAppearance.GreenMate.CareCardTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Care Card Description -->
    <style name="TextAppearance.GreenMate.CareCardSubtitle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Small Action Button for Care Cards -->
    <style name="Widget.GreenMate.Button.CareAction" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- WATER CTA Button: Premium Green -->
    <style name="Widget.GreenMate.Button.Water" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">76dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/button_water_background</item>
        <item name="android:textColor">@color/button_water_text</item>
    </style>

    <!-- FERTILIZE CTA Button: Premium Brown/Soil -->
    <style name="Widget.GreenMate.Button.Fertilize" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">76dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/button_fertilize_background</item>
        <item name="android:textColor">@color/button_fertilize_text</item>
    </style>

    <!-- ==================== PREMIUM PLANT CARD STYLES ==================== -->

    <!-- Plant Grid Card: Premium sage-tinted -->
    <style name="Widget.GreenMate.PlantCard" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/premium_card_corner_radius</item>
        <item name="cardElevation">@dimen/premium_card_elevation</item>
        <item name="cardBackgroundColor">@color/card_premium_surface</item>
        <item name="strokeColor">@color/card_premium_stroke</item>
        <item name="strokeWidth">@dimen/premium_card_stroke_width</item>
    </style>

    <!-- Plant Card Name -->
    <style name="TextAppearance.GreenMate.PlantCardName" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Plant Card Location -->
    <style name="TextAppearance.GreenMate.PlantCardLocation" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Plant Card Due Text -->
    <style name="TextAppearance.GreenMate.PlantCardDue" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- ==================== COMPACT STATUS BADGE ==================== -->

    <!-- Base compact badge style -->
    <style name="Widget.GreenMate.StatusBadge" parent="android:Widget.TextView">
        <item name="android:paddingStart">@dimen/status_badge_padding_h</item>
        <item name="android:paddingEnd">@dimen/status_badge_padding_h</item>
        <item name="android:paddingTop">@dimen/status_badge_padding_v</item>
        <item name="android:paddingBottom">@dimen/status_badge_padding_v</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxWidth">72dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Healthy badge: Green pill -->
    <style name="Widget.GreenMate.StatusBadge.Healthy" parent="Widget.GreenMate.StatusBadge">
        <item name="android:background">@drawable/bg_badge_healthy</item>
        <item name="android:textColor">@color/badge_healthy</item>
    </style>

    <!-- Attention badge: Amber pill -->
    <style name="Widget.GreenMate.StatusBadge.Attention" parent="Widget.GreenMate.StatusBadge">
        <item name="android:background">@drawable/bg_badge_attention</item>
        <item name="android:textColor">@color/badge_attention</item>
    </style>

    <!-- ==================== SCORE BADGE STYLES ==================== -->

    <!-- Base score badge style (must have explicit parent) -->
    <style name="Widget.GreenMate.ScoreBadge" parent="android:Widget.TextView">
        <item name="android:padding">@dimen/spacing_sm</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.GreenMate.ScoreBadge.Green" parent="Widget.GreenMate.ScoreBadge">
        <item name="android:background">@color/score_green_background</item>
        <item name="android:textColor">@color/score_green</item>
    </style>

    <style name="Widget.GreenMate.ScoreBadge.Yellow" parent="Widget.GreenMate.ScoreBadge">
        <item name="android:background">@color/score_yellow_background</item>
        <item name="android:textColor">@color/score_yellow</item>
    </style>

    <style name="Widget.GreenMate.ScoreBadge.Red" parent="Widget.GreenMate.ScoreBadge">
        <item name="android:background">@color/score_red_background</item>
        <item name="android:textColor">@color/score_red</item>
    </style>

</resources>
