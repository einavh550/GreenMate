<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <!-- Plant Icon/Photo Placeholder -->
        <ImageView
            android:id="@+id/image_plant"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_leaf"
            android:background="@drawable/bg_icon_circle"
            android:padding="@dimen/spacing_sm"
            android:scaleType="centerCrop"
            android:contentDescription="@string/cd_plant_photo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Plant Name -->
        <TextView
            android:id="@+id/text_plant_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:textAppearance="@style/TextAppearance.GreenMate.Title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_plant"
            app:layout_constraintEnd_toStartOf="@id/text_status"
            tools:text="Monstera" />

        <!-- Location -->
        <TextView
            android:id="@+id/text_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:textAppearance="@style/TextAppearance.GreenMate.Caption"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/text_plant_name"
            app:layout_constraintStart_toEndOf="@id/image_plant"
            app:layout_constraintEnd_toStartOf="@id/text_status"
            tools:text="Living Room" />

        <!-- Next Care Info -->
        <TextView
            android:id="@+id/text_next_care"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textAppearance="@style/TextAppearance.GreenMate.Caption"
            app:layout_constraintTop_toBottomOf="@id/text_location"
            app:layout_constraintStart_toEndOf="@id/image_plant"
            app:layout_constraintEnd_toStartOf="@id/text_status"
            tools:text="Water in 2 days" />

        <!-- Status Indicator -->
        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/spacing_sm"
            android:paddingVertical="@dimen/spacing_xs"
            android:textAppearance="@style/TextAppearance.GreenMate.Caption"
            android:background="@drawable/bg_status_badge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Healthy"
            tools:backgroundTint="@color/primary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
