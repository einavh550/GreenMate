<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_md"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_leaf"
            android:importantForAccessibility="no" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_sm"
            android:text="@string/app_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <TextView
            android:id="@+id/text_task_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            tools:text="3 tasks" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="@dimen/spacing_sm"
        android:background="@color/divider" />

    <!-- Tasks List Container -->
    <LinearLayout
        android:id="@+id/layout_tasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Task 1 -->
        <LinearLayout
            android:id="@+id/layout_task_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/spacing_xs"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/icon_task_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_water"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/text_task_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Water Monstera" />

        </LinearLayout>

        <!-- Task 2 -->
        <LinearLayout
            android:id="@+id/layout_task_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/spacing_xs"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/icon_task_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_water"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/text_task_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Fertilize Snake Plant" />

        </LinearLayout>

        <!-- Task 3 -->
        <LinearLayout
            android:id="@+id/layout_task_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/spacing_xs"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/icon_task_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_fertilizer"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/text_task_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Water Pothos" />

        </LinearLayout>

        <!-- Task 4 -->
        <LinearLayout
            android:id="@+id/layout_task_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/spacing_xs"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/icon_task_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_water"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/text_task_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Water Fern" />

        </LinearLayout>

        <!-- Empty State -->
        <TextView
            android:id="@+id/text_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/dashboard_all_done"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            tools:visibility="gone" />

        <!-- More tasks indicator -->
        <TextView
            android:id="@+id/text_more_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/primary"
            android:visibility="gone"
            tools:text="+2 more tasks"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>
